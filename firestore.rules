rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow authenticated users to read their own user document.
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      // You might want to restrict write access later, but for now this is fine.
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow a user to read the client document they are associated with.
    match /clients/{clientId} {
      allow read: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.clientId == clientId;
    }
  }
}