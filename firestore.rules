
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read their own user document.
    match /users/{userId} {
      allow read: if request.auth.uid == userId;
    }

    // A user with a 'client' role can read the client document
    // that matches their own clientId field.
    match /clients/{clientId} {
      allow read: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.clientId == clientId;
    }
  }
}
