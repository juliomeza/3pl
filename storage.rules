
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Permite la lectura pública de los logos de los clientes.
    // Se recomienda una regla más estricta en producción que verifique
    // la autenticación del usuario y su pertenencia al cliente.
    // Por ahora, esto permitirá que la imagen se muestre.
    match /client-logos/{allPaths=**} {
      allow read;
    }

    // Para futuras subidas, puedes restringir la escritura a usuarios autenticados
    // o a roles específicos (ej. 'employee').
    // match /client-logos/{clientId}/{fileName} {
    //   allow write: if request.auth != null;
    // }
  }
}
